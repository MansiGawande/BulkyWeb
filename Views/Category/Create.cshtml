@model Category // for create new obj of category class for fatch and create

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
@*           <div asp-validation-summary="All"></div> 
 *@        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for= "Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p=1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder"  class="form-control" />
             <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">

                <button class="btn btn-primary form-control" type="submit">Create</button>
            </div>
            <div class="col-6">

                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
            </div>

        </div>
    </div>
</form>

